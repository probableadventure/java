package Gamze;

import java.util.Scanner;

public class GelismisNotHesaplama {
    
    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        System.out.println("Vize 1 Notunuz: ");
        int vize1 = scanner.nextInt();
        System.out.println("Vize 2 Notunuz: ");
        int vize2 = scanner.nextInt();
        System.out.println("Final Notunuz: ");
        int finalnot= scanner.nextInt();
        System.out.println("Bu zamana kadarki GPA notunuz: ");
        double gpa= scanner.nextDouble();
        System.out.println("Sınavların yüzdelik değerlerini giriniz: ");
        System.out.println("Vize 1 Yüzdesi: (0,3) şeklinde giriniz: ");
        double yuzde1 = scanner.nextDouble();
        System.out.println("Vize 2 Yüzdesi: ");
        double yuzde2 = scanner.nextDouble();
        System.out.println("Final Yüzdesi: ");
        double yuzde3 = scanner.nextDouble();
        
        double toplamnot = (vize1*yuzde1)+(vize2*yuzde2)+(finalnot*yuzde3);
        System.out.println("Ortalama Notunuz: ");
        
        if(toplamnot>=90){
            System.out.println("AA aldınız.");}
        else if(toplamnot>=85) {
            System.out.println("BA aldınız.");}
        else if(toplamnot>=80) {
            System.out.println("BB aldınız.");}
        else if(toplamnot>=75) {
            System.out.println("CB aldınız.");}
        else if(toplamnot>=70) {
            System.out.println("CC aldınız.");}
        else if(toplamnot>=65) {
            System.out.println("DC aldınız.");}
        else if(toplamnot>=60) {
            {if (gpa<2.5) {
            System.out.println("DD aldınız.Ortalamanız düşük.Bu dersi tekrar alabilirsiniz.");}
            else
            {System.out.println("DD aldınız.");}}}
        else {
            System.out.println("FF, Kaldınız. ");
        }
    }
    
}
